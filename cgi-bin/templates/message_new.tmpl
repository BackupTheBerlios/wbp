<TMPL_INCLUDE header.tmpl> 

<h1>Messages - Formular</h1>

<form action="<TMPL_VAR FORM>" method="post">

<input type="hidden" name="action" value="<TMPL_VAR ACTION>">
<input type="hidden" name="sid" value="<TMPL_VAR SID>">
<input type="hidden" name="method" value="<TMPL_VAR METHOD>">

<table cellspacing="0" cellpadding="0" border="0" align="center">
<tr>
	<td colspan="2" align="left">
	<TMPL_IF MSG>
		<font color="#ff0000"><TMPL_VAR MSG></font>
	</TMPL_IF>
	</td>
</tr>
<tr>
	<td>
	<b>To User:</b><br>
	<select name="uid" multiple>
	<TMPL_LOOP USER_LOOP>
     		<option value="<TMPL_VAR UID>"><TMPL_VAR UNAME>
	</TMPL_LOOP>
	</select>
	</td>
	<td>
	<b>To Project:</b><br>
	<select name="pid" multiple>
	<TMPL_LOOP PROJECT_LOOP>
     		<option value="<TMPL_VAR PID>"><TMPL_VAR PNAME>
	</TMPL_LOOP>
	</select>
	</td>

</tr>
<tr>
	<td colspan="2">
	<b>Subject:</b><br>
	<input type="text" name="subject" value="<TMPL_VAR SUBJECT>">
	</td>
</tr>
<tr>
	<td colspan="2">
	<b>Content:</b><br>
	<textarea name="content" rows=10 cols=50 wrap=virtual><TMPL_VAR CONTENT></textarea>
	</td>
</tr>

<tr>
	<td colspan="2">
	<input type="submit" name="ok123" value="OK">
	</td>
</tr>
</table>
</form>

<TMPL_INCLUDE footer.tmpl>








